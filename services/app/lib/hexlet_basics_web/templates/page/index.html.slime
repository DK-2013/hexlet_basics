      h4.card-title.text-center PHP
      img.hexlet-basics-language-icon.img-fluid(src=static_path(@conn, "/images/php.png"))
      = link gettext("Start"), to: language_path(@conn, :show, "php"), class: "btn btn-primary btn-block"
  .card.hexlet-basics-indigo-card
