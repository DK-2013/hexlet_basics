      h4.card-title.text-center JavaScript
      img.hexlet-basics-language-icon.img-fluid(src=static_path(@conn, "/images/js.png"))
      p.card-title.text-center Under Development
  .card.hexlet-basics-purple-card
    .card-body
      h4.card-title.text-center Python
      img.hexlet-basics-language-icon.img-fluid(src=static_path(@conn, "/images/python.png"))
      p.card-title.text-center Under Development
  .card.hexlet-basics-orange-card
    .card-body
      h4.card-title.text-center Racket
      img.hexlet-basics-language-icon.img-fluid(src=static_path(@conn, "/images/racket2.png"))
      p.card-title.text-center Under Development
